general {
        colors = true
        interval = 1
}

order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
order += "run_watch DHCP"
order += "wireless wlp4s0"
order += "tztime local"

load {
        format = " %1min "
}

cpu_usage {
        format = " %usage "
        degraded_threshold = 40
}

cpu_temperature 0 {
        format = " T: %degrees Â°C "
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

disk "/" {
        format = " /: %free "
}

disk "/home" {
        format = " /home: %free "
}

run_watch DHCP {
        format = " %title: %status "
        pidfile = "/var/run/dhcpcd-wlp4s0.pid"
}

ethernet enp3s0 {
        format_up = " E: %ip (%speed) "
        format_down = " E: down "
}

wireless wlp4s0 {
        format_up = " W: %ip "
        format_down = " W: down "
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S "
}
